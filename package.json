{
  "name": "@luthaf/typescript-doctest",
  "version": "1.3.0",
  "description": "Doc Test Generator for TypeScript Projects",
  "main": "lib/src/index.js",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest --config jestconfig.json",
    "doc": "typedoc --out ./doc",
    "build": "tsc"
  },
  "files": [
    "lib/src/**/*",
    "bin/ts-doctest"
  ],
  "homepage": "https://github.com/Luthaf/ts-doctest/",
  "bugs": {
    "url": "https://github.com/Luthaf/ts-doctest/issues"
  },
  "bin": {
    "ts-doctest": "./bin/ts-doctest"
  },
  "keywords": [
    "tests",
    "typescript",
    "testing",
    "documentation",
    "doc",
    "typedocplugin",
    "typedoc"
  ],
  "author": "Ivo Wetzel",
  "license": "MIT",
  "dependencies": {
    "markdown-it": "^12",
    "typedoc": "^0.22",
    "typescript": "^4.5"
  },
  "devDependencies": {
    "@types/jest": "^27",
    "@types/markdown-it": "^12",
    "@types/node": "^17",
    "jest": "^27",
    "ts-jest": "^27"
  }
}
